include ./basic_navigator.jade

block content
  h1 Login
  br

  .col-lg-6

    if message 
      .alert.alert-danger
        button.close(type='button', data-dismiss='alert') &times;
        strong Uh-oh! 
        p.
          #{message}

    div.well.bs-component
      form#loginForm.form-horizontal(method='post')
          fieldset
              .form-group
                  label.col-lg-2.control-label(for='inputEmail') Email Address
                  .col-lg-8
                      input#inputEmail.form-control(placeholder='Enter your Email', type='email', name="email")
              .form-group
                  label.col-lg-2.control-label(for='inputPassword') Password
                  .col-lg-8
                      input#inputPassword.form-control(placeholder='Enter a Password', type='password', name="password")
              .form-group
                .col-lg-6.col-lg-offset-2
                  button.btn.btn-primary(type='submit') Submit
    p
        | Need an account?
        a(href='/signup')   Click here to register.
