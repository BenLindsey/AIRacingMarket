include ./basic_navigator.jade
block content
    script.
        var cars = 2;

        var addCar = function() {
            cars++;
        }

        var removeCar = function(id) {
            if(cars > 1) {
                var element = document.getElementById(id);
                element.parentNode.removeChild(element);
                cars--;
            }
        }

    h1.
      Create your Tournament
    .col-lg-6
        div.well.bs-component
            form#newTournamentForm.form-horizontal(method='post')
                fieldset
                    .form-group
                        label.col-lg-2.control-label(for='inputTournamentName') Name
                        .col-lg-8
                            input#inputTournamentName.form-control(placeholder='Enter a Tournament Name', type='text', name="tournamentname")

                    .form-group
                        .col-lg-6.col-lg-offset-2
                            .btn-group
                                button.btn.btn-default(type='button', onClick = "addCar()") Add Car

                    .form-group
                        label.col-lg-2.control-label(for='inputScriptName') Car A
                        .col-lg-6
                            select#select.form-control(placeholder='Select Script', name="scriptnameA")
                                - if (scripts.length) {
                                each entry, i in scripts
                                    option= entry.scriptName
                                - }
                            button.btn.btn-default(type='button', onClick = "removeCar(this)") Remove Car

                    .form-group
                        label.col-lg-2.control-label(for='inputScriptName') Car B
                        .col-lg-6
                            select#select.form-control(placeholder='Select Script', name="scriptnameB")
                                - if (scripts.length) {
                                each entry, i in scripts
                                    option= entry.scriptName
                                - }
                            button.btn.btn-default(type='button', onClick = "removeCar(this)") Remove Car

                    .form-group
                        label.col-lg-2.control-label(for='inputLevelName') Level
                        .col-lg-6
                            select#select.form-control(placeholder='Select Level', name="levelname")
                                option Wish-There-Was-A-Cow
                    .form-group
                        .col-lg-6.col-lg-offset-2
                            .btn-group
                                button.btn.btn-default(type='reset') Reset
                                button.btn.btn-primary(type='submit') Submit
